<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Label Content="Сторона 1:"/>
        <TextBox x:Name="Side1TextBox" Margin="120,0,0,0"/>

        <Label Content="Сторона 2:" Margin="0,30,0,0"/>
        <TextBox x:Name="Side2TextBox" Margin="120,30,0,0"/>

        <Label Content="Угол (в градусах):" Margin="0,60,0,0"/>
        <TextBox x:Name="AngleTextBox" Margin="120,60,0,0"/>

        <Button Content="Вычислить площадь" HorizontalAlignment="Left" Margin="120,90,0,0" VerticalAlignment="Top"
                Width="150" Click="CalculateButton_Click"/>

        <Label x:Name="ResultLabel" Content="" Margin="0,130,0,0"/>
    </Grid>
</Window>
